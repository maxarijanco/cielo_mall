<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_incremento_salarial_tree" model="ir.ui.view">
        <field name="name">hr.incremento.salarial.tree</field>
        <field name="model">hr.incremento.salarial</field>
        <field name="arch" type="xml">
            <tree string="Incremento Salarial" editable="top">
                <field name="fecha_promulgacion"/>
                <field name="decreto_supremo"/>
                <field name="aumento_salario_basico"/>
            </tree>
        </field>
    </record>

    <record id="hr_incremento_salarial_action" model="ir.actions.act_window">
        <field name="name">Incremento Salarial</field>
        <field name="res_model">hr.incremento.salarial</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_incremento_salarial_tree"/>
    </record>

    <menuitem
        id="menu_hr_incremento_salarial"
        name="Incremento Salarial"
        action="hr_incremento_salarial_action"
        parent="acoim_planillas_enterprise_base.menu_hr_payroll_rrhh_root"
        sequence="10"
    />
