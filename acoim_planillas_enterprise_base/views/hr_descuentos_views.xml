    <record id="hr_descuentos_tree" model="ir.ui.view">
        <field name="name">hr.descuentos.tree</field>
        <field name="model">hr.descuentos</field>
        <field name="arch" type="xml">
            <tree string="Descuentos" editable="top">
                <field name="tipo_descuento"/>
                <field name="modo_descuento"/>
                <field name="employee"/>
                <field name="company_id"/>
                <field name="fecha_descuento"/>
                <field name="monto"/>
                <field name="nota"/>
            </tree>
        </field>
    </record>

    <record id="hr_descuentos_action" model="ir.actions.act_window">
        <field name="name">Descuentos</field>
        <field name="res_model">hr.descuentos</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_descuentos_tree"/>
    </record>

