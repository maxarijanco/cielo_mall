<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_l10n_bo_acoim_purchase_invoice_account_journal_form" model="ir.ui.view">
            <field name="name">view_l10n_bo_acoim_purchase_invoice_account_journal_form</field>
            <field name="model">account.journal</field>
            <field name="priority" eval="17" />
            <field name="inherit_id" ref="account.view_account_journal_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='advanced_settings']/group" position="after">
                    <group name="bo_edi_settings" string="COMPRAS (BO)" invisible="not adm_journal_bo_purchase_edi or type not in ['purchase']" >
                        <group>
                            <field name="adm_journal_bo_purchase_edi" invisible="1" />
                            <field name="bo_purchase_edi" widget="boolean_toggle" />
                            <field name="purchase_sequence" />
                            
                        </group>
                    </group>
                </xpath>
            </field>
        </record>        
    </data>
</odoo>
