<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_demo_invoice_cancellation_line_wizard" model="ir.actions.act_window">
            <field name="name">Lineas de anulacion facturas de demostracion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">demo.invoice.cancellation.line.wizard</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer linea de anulacion facturas de pruebas.
                </p>
            </field>
        </record>
        <record id="view_demo_invoice_cancellation_line_wizard_tree" model="ir.ui.view">
            <field name="name">view_demo_invoice_cancellation_line_wizard_tree</field>
            <field name="model">demo.invoice.cancellation.line.wizard</field>
            <field name="arch" type="xml">
                <tree editable="bottom" >
                    <field name="quantity"/>
                    <field name="document_type" options="{'no_create': True, 'no_open': True}"/>
                    <field name="reason_id" options="{'no_create': True, 'no_open': True}"  />
                </tree>
            </field>
        </record>
    </data>
</odoo>
