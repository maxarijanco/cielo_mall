<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10n_bo_branch_office" model="ir.actions.act_window">
        <field name="name">Sucursales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.bo.branch.office</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer sucursal
            </p>
        </field>
    </record>
    <record id="view_l10n_bo_branch_office_tree" model="ir.ui.view">
        <field name="name">l10n.bo.branch.office.tree</field>
        <field name="model">l10n.bo.branch.office</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                
                
            </tree>
        </field>
    </record>

    <record id="view_l10n_bo_branch_office_form" model="ir.ui.view">
        <field name="name">l10n.bo.branch.office.form</field>
        <field name="model">l10n.bo.branch.office</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <header>
                    <button name="update_pos_from_siat" type="object" string="ACTUALIZAR POS(S)" icon="fa-play-circle" />
                    <button name="cuis_massive_request" type="object" string="ACTUALIZAR CUIS(S)" icon="fa-play-circle" />
                    <button name="cufd_massive_request" type="object" string="ACTUALIZAR CUFD(S)" icon="fa-play-circle" />
                    
                    <button name="action_pos_register_wizard" type="object" string="Registro POS" icon="fa-play-circle" />
                   
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informacion general" >
                            <field name="code"/> 
                            <field name="company_id" />    
                            
                            <field name="id" invisible="1" />
                            
                            <field name="pos_id" domain="[('code', '=', 0),('branch_office_id', '=', id), ('company_id','=',company_id)]"  />
                            
                            <button name="pos_system_init" string="(+) Crear Punto de venta de inicio de sistema" type="object" class="oe_highlight" invisible="pos_id" colspan='2' />
                        </group>
                        <group string="Direccion" >
                            <field name="country_id" invisible="1"/>
                            <field name="state_id" options="{'no_create': True, 'no_open': True}"  domain="[('country_id', '=', country_id)]" />
                            <field name="province_id" options="{'no_create': True, 'no_open': True}"  domain="[('country_id', '=', country_id), ('state_id','=',state_id)]"  />
                            <field name="municipality_id" options="{'no_create': True, 'no_open': True}"  domain="[('city_id', '=', province_id)]" />
                            <field name="phone"/>

                                    
                            
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Puntos de venta">
                            <field name="l10n_bo_pos_ids" invisible="not l10n_bo_pos_ids" />
                        </page>
                        
                        <page string="Ajustes" >
                            <group>
                                <group>
                                    <field name="default_pos_id" domain="[('branch_office_id', '=', id),('company_id','=',company_id)]"  options="{'no_create': True}" />
                                </group>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>