<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="l10n_bo_account_move_form" model="ir.ui.view">
            <field name="name">l10n.bo.account.move.form</field>
            <field name="model">account.move</field>
            <field name="priority" eval="18"/>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                
                <xpath expr="//button[@name='action_reverse']" position="attributes">                    
                    <attribute name="invisible">move_type not in ('out_invoice', 'in_invoice') or state != 'posted' or is_gift_card or invoice_type_code in [2,3]</attribute>
                    
                </xpath>
                <xpath expr="//button[@name='action_reverse']" position="after"> 
                    
                    <button name="action_reversion"
                            string="Revertir"
                            type="object"
                            class="oe_highlight"
                            confirm="La factura vuelve a ser un documento valido, solo puede revertirse una sola vez"
                            invisible="not edi_bo_invoice or state not in ['cancel']"
                            />
                    
                    <button name="verificacionEstadoFactura"
                            string="Verificar factura"
                            type="object"
                            class="oe_highlight"
                            invisible="not edi_bo_invoice or state  in ['draft']"
                            />
                    
                </xpath>
                
                
                
                <xpath expr="//field[@name='partner_shipping_id']" position="before">
                    <field name="edi_bo_invoice" invisible="0" />
                    <field name="many_pos" invisible="1" />
                    <field name="document_type_code" invisible="1" />
                    
                    <field name="emision_type_id" invisible='1' />
                    <field name="emision_code" invisible='1' />
                    
                    
                    
                    
                    <field name="meridies" invisible="1" />
                    

                    <field 
                        name="branch_office_id" 
                        options="{'no_create': True,'no_open': True}" 
                        invisible ="not edi_bo_invoice"
                        required="edi_bo_invoice"
                        readonly="state != 'draft'"
                    />

                    <field 
                        name="pos_id" 
                        options="{'no_create': True,'no_open': True}" 
                        invisible ="not edi_bo_invoice"
                        required="edi_bo_invoice"
                        readonly="state != 'draft'"
                        domain="[('branch_office_id','=',branch_office_id)]"
                    />
                    
                    <field 
                        name="document_type_id" 
                        options="{'no_create': True,'no_open': True}" 
                        invisible ="not edi_bo_invoice"
                        required="edi_bo_invoice"
                        readonly="state != 'draft'"
                        
                        domain="[('pos_id', '=', pos_id)]"
                        
                    />
                    <field 
                        name="payment_type_id" 
                        options="{'no_create': True,'no_open': True}" 
                        invisible ="not edi_bo_invoice"
                        required="edi_bo_invoice"
                        readonly="state != 'draft'"
                    />
                    
                    <field name="is_gift_card" invisible="1" />
                    <field name="is_card" invisible="1" />
                    
                    <field 
                        name="card" 
                        invisible="not edi_bo_invoice or not is_card"
                        required="is_card"
                        readonly="state != 'draft'"
                    />
                    
                    <field 
                        name="amount_payment_gifcard_plus" 
                        invisible="not edi_bo_invoice or not is_gift_card"
                        required="is_gift_card"
                        readonly="state != 'draft'"
                    />
                    

                    
                </xpath>


                <xpath expr="//group[@id='header_right_group']/label" position="before">
                    
                    <field name="invoice_date_edi"  invisible="move_type != 'out_invoice' or not edi_bo_invoice" readonly="state != 'draft'" />
                                        
                </xpath>



                
                <!-- <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/label[@for='invoice_date']" position="attributes">
                    <attribute name="invisible">move_type not in ['out_invoice', 'out_refund', 'out_receipt'] or edi_bo_invoice</attribute>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='invoice_date']" position="attributes">
                    <attribute name="invisible">move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'] or edi_bo_invoice</attribute>
                </xpath>
                
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='invoice_date']" position="after">
                    <field name="invoice_date_edi" invisible="not edi_bo_invoice" required="edi_bo_invoice" readonly="state != 'draft'" />                    
                </xpath> -->
                
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='currency_id']" position="after">
                    <field name="edi_state" invisible="not edi_state or not edi_bo_invoice"/>

                    <field name="emision_type_id" invisible="not edi_bo_invoice" readonly='1' />
                </xpath>

                <xpath expr="//field[@name='invoice_incoterm_id']" position="attributes">
                    <attribute name="required">document_type_code in [3]</attribute>
                </xpath>
                
                
                <xpath expr="//notebook" position="inside">
                    <page name="page_edi" string="Factura (BO)" invisible="not edi_bo_invoice" readonly="state != 'draft'" >
                        
                        <group invisible="not edi_bo_invoice">
                            
                            <field name="legend_id"  options="{'no_create': True,'no_open': True}" readonly="state != 'draft'" />
                            
                        </group>

                        <group string="Datos adicionales" >
                            <group string='Datos del cliente' >
                                
                                <field name="reazon_social" />
                                
                                <span class="o_form_label o_td_label" name="label_ci_nit" >
                                    <b>NIT/CI</b>
                                </span>
                                <div class="o_address_format" >
                                            <field name="identification_type_id" class="o_address_street"  options="{'no_create': True, 'no_open': True}"  />
                                            <field name="nit_ci" placeholder="NIT/CI" class="o_address_city" />
                                            <field name="identification_code" invisible="1"/>
                                            <field name="complement" class="o_address_state" placeholder="Complemento" invisible='identification_code != 1'/>
                                            <field name="nit_state" class="o_address_zip" invisible='identification_code != 5'/>
                                            <field name="force_send" widget="boolean_toggle" class="o_address_zip" invisible="not edi_bo_invoice" readonly="state != 'draft'"/>
                                </div>
                    
                                
                            </group>
                            <group string='Factura'>
                                
                                <field name="invoice_number" />
                                <field name="cuf"/>
                                <field name="cafc"  invisible="not cafc"/>
                                
                                
                                
                            </group>
                            <group invisible="not edi_bo_invoice" string='Otra informacion'>
                                <field name="url" widget="url" />
                                <field name="transaccion" invisible="1" />
                                
                                <field name="l10n_bo_document_type" />
                                <field name="invoice_type_id" />
                                
                                <field name="invoice_type_code" />
                                <field name="edi_str" invisible="1" />
                                <field name="error"  invisible="not error or transaccion"/>
                                <field name="economic_activity_id" readonly="1" invisible="not economic_activity_id"/>
                                
                            </group>
                        </group>
                        <separator invisible="not edi_bo_invoice" string="Observaciones (BO)" colspan="4" />
                        <field invisible="not edi_bo_invoice" name="messagesList_ids">
                            <tree   create="false" >
                                <field name="name"/>
                                <field name="code"/>
                                <field name="description"/>
                                
                            </tree>
                            
                        </field>
                    </page>
                </xpath>

                <!-- BASE CUSTOMISE -->
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="invisible">not show_reset_to_draft_button or (edi_bo_invoice and emision_code==1)</attribute>
                </xpath>

                
                
            </field>
        </record>

        
    </data>
</odoo>
