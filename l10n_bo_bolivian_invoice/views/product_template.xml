<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="l10n_bo_product_template_service_form" model="ir.ui.view">
        <field name="name">l10n.bo.product.template.service.form</field>
        <field name="model">product.template</field>
        <field name="priority" eval="17"/>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//notebook/page[last()]" position="after">
                
                <page string="Facturacion (BO)" name='page_bo' >
                    <group name='settings_bo' string='Configuracion boliviana' invisible="not enable_bo_edi">
                        <group>
                            <field name="enable_bo_edi" invisible="1" />
                            <field name="siat_service_id" options="{ 'no_open': True, 'no_create': True}"  />
                
                            <field name="gif_product" widget="boolean_toggle"/>
                            <field name="global_discount" widget="boolean_toggle" invisible="not gif_product"/>
                            <field name="gift_card_product" widget="boolean_toggle" invisible="not gif_product" />
                            
                        </group>
                        <group>
                            
                            <field name="siat_service_nandina_id" options="{ 'no_open': True, 'no_create': True}" domain="[('l10n_bo_product_service_id', '=', siat_service_id)]" />
                    
                        </group>
                        <!-- <group name='exportation_settings' >
                            <field name="national_cost" widget="boolean_toggle" invisible="not gif_product" />
                            <field name="international_cost" widget="boolean_toggle" invisible="not gif_product" />
                        </group> -->
                    </group>
                </page>
                
            </xpath>
        </field>
    </record>

</odoo>
