<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_l10n_bo_standard_sale_line" model="ir.actions.act_window">
            <field name="name">Lineas de registro de ventas (BO)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.bo.standard.sale.line</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer linea de registro de venta (BO).
                </p>
            </field>
        </record>
        <record id="view_l10n_bo_standard_sale_line_tree" model="ir.ui.view">
            <field name="name">view_l10n_bo_standard_sale_line_tree</field>
            <field name="model">l10n.bo.standard.sale.line</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false" >
                    <field name="invoice_id" column_invisible="True"/>
                    <field name="company_id" column_invisible="True"/>
                    <field name="name"/>
                    <field name="specification"/>
                    <field name="invoice_date"/>
                    <field name="invoice_number"/>
                    <field name="autorization_code"/>
                    <field name="nit_ci"/>
                    <field name="complement"/>
                    <field name="reazon_social"/>
                    <field name="amount_total"/>
                    <field name="amount_ice" optional="show"/>
                    <field name="amount_iehd" optional="show"/>
                    <field name="amount_ipj" optional="show"/>
                    <field name="amount_rate" optional="show"/>
                    <field name="amount_no_iva" optional="show"/>
                    <field name="amount_exempt" optional="show"/>
                    <field name="amount_cero_rate" optional="show"/>
                    <field name="amount_subtotal"/>
                    <field name="amount_discount" optional="show"/>
                    <field name="amount_gift_card" optional="show"/>
                    <field name="amount_fiscal_debit_base"/>
                    <field name="amount_fiscal_debit"/>
                    <field name="state"/>
                    <field name="control_code" optional="show"/>
                    <field name="register_type" optional="show" />
                </tree>
            </field>
        </record>
    </data>
</odoo>
