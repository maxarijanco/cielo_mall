<odoo>
    <template
        id="report_invoice_document"
        inherit_id="account.report_invoice_document"
        priority="101"
    >
        <xpath expr="//t[@t-set='display_discount']" position="after">
            <t
                t-set="display_amount_discount"
                t-value="any([l.amount_discount for l in o.invoice_line_ids])"
            />
        </xpath>
        <xpath expr="//th[@t-if='display_discount']/span" position="replace">
            <t t-if="display_amount_discount">
                <span>Discount Amount (%)</span>
            </t>
            <t t-else="">
                <span>Disc. %</span>
            </t>
        </xpath>
        <span t-field="line.discount" position="replace">
            <t t-if="display_amount_discount">
                <span class="text-nowrap" t-field="line.amount_discount" /> (or <span
                    class="text-nowrap"
                    t-field="line.discount"
                /> %)
            </t>
            <t t-else="">
                <span class="text-nowrap" t-field="line.discount" />
            </t>
        </span>
    </template>
</odoo>
