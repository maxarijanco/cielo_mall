<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <!-- Form view for "model" -->
        <record id="view_account_move_form" model="ir.ui.view">
            <field name="name">Vista base (BO)</field>
            <field name="model">account.move</field>
             <field name="inherit_id" ref="account.view_move_form" />
            <field name="priority" eval="17" />
            <field name="arch" type="xml">

                <xpath expr="//group[@id='header_right_group']" position="after">
                    <group name='l10n_bo_invisible_group' invisible='1' >
                        <field name="invisible_for_move" />
                        
                    </group>
                </xpath>
                

                <xpath expr="//group[@id='header_right_group']/label[1]" position="attributes">
                    <attribute name="invisible">move_type not in ('out_invoice', 'out_refund', 'out_receipt') or  invisible_for_move</attribute>
                </xpath>
                <xpath expr="//group[@id='header_right_group']/label[2]" position="attributes">
                    <attribute name="invisible">move_type not in ('in_invoice', 'in_refund', 'in_receipt') or  invisible_for_move</attribute>
                </xpath>
                

                <xpath expr="//group[@id='header_right_group']/field[@name='invoice_date']" position="attributes">
                    <attribute name="invisible">move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt') or  invisible_for_move</attribute>
                </xpath>

                
                
                

            </field>
        </record>
        
        

    </data>
</odoo>
